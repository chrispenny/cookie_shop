<?xml version="1.0" encoding="utf-8"?>
<database name="ci" defaultIdMethod="native" namespace="CookieShop\Model">
	<table name="basket" phpName="Basket">
		<column name="id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
		<column name="name" type="VARCHAR" size="255" required="true"/>
		<column name="price" type="FLOAT" required="true"/>
		<column name="size" type="INTEGER" required="true"/>
		<column name="sort_order" type="INTEGER" required="true"/>
	</table>

	<table name="basket_cookie" phpName="BasketCookie">
		<column name="id" phpName="Id" type="" primaryKey="true" autoIncrement="true" required="true"/>
		<column name="basket_id" type="INTEGER" required="true"/>
		<column name="cookie_id" type="INTEGER" required="true"/>
		<column name="quantity" type="INTEGER" required="true"/>
		<column name="sort_order" type="INTEGER" required="true"/>

		<foreign-key foreignTable="basket" name="FK_BasketCookie_Basket">
			<reference local="basket_id" foreign="id"/>
		</foreign-key>
		<foreign-key foreignTable="cookie" name="FK_BasketCookie_Cookie">
			<reference local="cookie_id" foreign="id"/>
		</foreign-key>
	</table>

	<table name="cookie" phpName="Cookie">
		<column name="id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
		<column name="name" type="VARCHAR" size="255" required="true"/>
		<column name="img" type="VARCHAR" size="255" required="true"/>
	</table>
</database>
